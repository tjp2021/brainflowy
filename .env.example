# BrainFlowy Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/brainflowy
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/brainflowy_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://localhost:3000"]

# Email Configuration (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_FOLDER=uploads/

# Application Settings
APP_NAME=BrainFlowy
APP_VERSION=1.0.0
DEBUG=false
TESTING=false

# Frontend Configuration
FRONTEND_HOST=http://localhost:3000

# Task Master AI (Development only)
ANTHROPIC_API_KEY=your-anthropic-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key
OPENAI_API_KEY=your-openai-api-key